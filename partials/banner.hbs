<header class="main-header tag-head {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
<nav class="main-nav overlay clearfix">
  {{#if @blog.navigation}}
  <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
  {{/if}}
</nav>

<div class="vertical">
  <div class="main-header-content inner">
    <h1 class="highlight page-title"> <a href="/" class="title-link">{{@blog.title}}</a></h1>
    <h2 class="highlight page-description">{{@blog.description}}</h2>
  </div>
</div>
<a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>
